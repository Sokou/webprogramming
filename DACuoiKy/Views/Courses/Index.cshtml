@using DACuoiKy.Models;
@{
    ViewBag.Title = "Index";
}

<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg overlay2">
    <h3>SẢN PHẨM</h3>
</div>
<!-- bradcam_area_end -->
<!-- popular_courses_start -->
<div class="popular_courses plus_padding" style="margin-bottom:-300px;>
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-100">
                    <h3>Các loại sản phẩm được ưa chuộng nhất</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- popular_courses_start -->
<div class="popular_courses">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="course_nav">
                    <nav>
                        <ul class="nav" id="myTab" role="tablist">
                            @{
                                int d = 0;
                                foreach (LoaiSP i in Common.getCategories())
                                {
                                    <li class="nav-item">
                                        <a class="nav-link  @(d++ == 0 ? "active" : "")" id="@i.maLoai-tab" data-toggle="tab" href="#@i.maLoai" role="tab"
                                           ria-controls="@i.maLoai" aria-selected="false">@i.tenLoai</a>
                                    </li>
                                }
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </div>
    <div class="all_courses">
        <div class="container">
            <div class="tab-content" id="myTabContent">
                @{
                    int m = 0;
                    foreach (LoaiSP i in Common.getCategories())
                    {
                        <div class="tab-pane fade show @(m++ == 0 ? "active" : "")" id="@i.maLoai" role="tabpanel" aria-labelledby="@i.maLoai-tab">
                            <div class="row">
                                @{
                                    int n = 1;
                                    foreach (SanPham j in Common.getProductByLoaiSP(i.maLoai))
                                    {
                                        <div class="col-xl-4 col-lg-4 col-md-6">
                                            <div class="single_courses">
                                                <div class="thumb">
                                                    <a href="@Url.Action("Index", "CoursesDetails", new { MaSanPham = j.maSP })">
                                                        <img src="@j.hinhDD" alt="">
                                                    </a>
                                                </div>
                                                <div class="courses_info">
                                                    <span>@i.tenLoai</span>
                                                    <h3><a href="@Url.Action("Index", "CoursesDetails", new { MaSanPham = j.maSP })">@j.tenSP</a></h3>
                                                    <div class="star_prise d-flex justify-content-between">
                                                        <div class="star">
                                                            <i class="flaticon-mark-as-favorite-star"></i>
                                                            <span>(4.5)</span>
                                                        </div>
                                                        <div class="prise">
                                                            <span class="active_prise">
                                                                @String.Format("{0:#,##0 đ}", j.giaBan)
                                                            </span>
                                                        </div>
                                                    </div>
                                                    @using (Html.BeginForm("AddToCart", "Home", FormMethod.Post))
                                                    {
                                                        <input name="maSP" type="hidden" value="@j.maSP" />
                                                        <button style="margin-left:80px;" class="btn btn-primary">Chọn mua</button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        if (n++ >= 6)
                                        {
                                            break;
                                        }
                                    }
                                }
                                <div class="col-xl-12">
                                    <div class="more_courses text-center">
                                        <a href="#" class="boxed_btn_rev">các sản phẩm khác</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<!-- testimonial_area_start -->
<!-- testimonial_area_start -->
<div class="testimonial_area testimonial_bg_1 overlay">
    <div class="testmonial_active owl-carousel">
        <div class="single_testmoial">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="testmonial_text text-center">
                            <div class="author_img">
                                <img src="img/testmonial/author_img.png" alt="">
                            </div>
                            <p>
                                "Rủi do lớn nhất là bạn không chấp nhận bất kỳ rủi ro nào <br>
                                Trong một thế giới thay đổi thực sự nhanh chóng,chiến lược duy nhất được đảm bảo thất bại <br>
                                là không chấp nhận rủi ro "

                            </p>
                            <span>- Mark Zuckerberg</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="single_testmoial">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="testmonial_text text-center">
                            <div class="author_img">
                                <img src="img/testmonial/author_img.png" alt="">
                            </div>
                            <p>
                                "Ngành công nghệ của chúng ta không tôn trọng truyền thống <br> Nó chỉ tôn trọng sự đổi mới "
                            </p>
                            <span>- Satya Nadella</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- testimonial_area_end -->
<div class="our_courses">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-100">
                    <h3>Tiêu Chuẩn Đánh Giá</h3>
                    <p>
                        Dịch vụ - Cung cấp thiết bị điện tử - Tiêu chuẩn đánh giá các thiết bị điện tử <br>
                        yếu tố kỹ thuật, thiết kế, Phương thức kinh doanh, mẫu mã, giải quyết tranh chấp và bảo mật thông tin
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-md-6 col-lg-6">
                <div class="single_course text-center">
                    <div class="icon">
                        <i class="flaticon-art-and-design"></i>
                    </div>
                    <h3>Chức năng hoàn thiện</h3>
                    <p>
                        Hoàn thiện về mọi mặt, thao tác, tích hợp nhiều tính năng, tăng khả năng trải nghiệm đến người dùng
                    </p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-lg-6">
                <div class="single_course text-center">
                    <div class="icon blue">
                        <i class="flaticon-business-and-finance"></i>
                    </div>
                    <h3>Chất lượng tốt</h3>
                    <p>
                        Đảm bảo sản phẩm bền lâu dài, chống nước, bảo hành, đổi trả 1:1 nếu lỗi do nhà cung cấp.
                    </p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-lg-6">
                <div class="single_course text-center">
                    <div class="icon">
                        <i class="flaticon-premium"></i>
                    </div>
                    <h3>Giá thành rẻ</h3>
                    <p>
                        Chất lượng tốt, giá thành rẻ là nhu cầu của tất cả mọi người.
                    </p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-lg-6">
                <div class="single_course text-center">
                    <div class="icon gradient">
                        <i class="flaticon-crown"></i>
                    </div>
                    <h3>Đội ngũ hỗ trợ 24/7</h3>
                    <p>
                        Đội ngũ thân thiện nhiệt tình, hỗ trợ khách hàng 24/7
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
