@model DACuoiKy.Models.BaiViet
@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
    @using (Html.BeginForm("Index", "NewArticle", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <!-- left column -->
            <div class="col-md-8">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông Tin Chính</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên Bài Viết</label>
                                @Html.TextBoxFor(m => m.tenBV, new { @class = "form-control", @placeholder = "Tên Bài Viết Tối Đa 35 Ký Tự" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Nội Dung Tóm Tắt</label>
                                @Html.TextAreaFor(m => m.ndTomTat, new { @class = "form-control", @placeholder = "Nội Dung Tóm Tắt Không Được Quá 100 Chữ" })
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </form>
                </div>
                <!-- /.card -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Ngày Đăng</label>
                                @Html.TextBoxFor(m => m.ngayDang, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Tài Khoản</label>
                                @Html.TextBoxFor(m => m.taiKhoan, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label>Số Lần Đọc</label>
                                @Html.TextBoxFor(m => m.soLanDoc, new { @class = "form-control", @disabled = "disabled" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- right column -->
            <div class="col-md-4">
                <!-- general form elements disabled -->
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Hình ảnh</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <img src="@ViewBag.ddHinh" />
                        <label for="exampleInputFile">File input</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="upFile" name="HinhDaiDien">
                                <label class="custom-file-label" for="exampleInputFile">Chọn file</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text" id="">Upload</span>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">
                            Nội Dung Bài Viết
                        </h3>
                        <!-- tools box -->
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            @Html.TextAreaFor(m => m.noiDung, new
                            {
                                @class = "textarea",
                                @placeholder = "Place some text here",
                                @id = "vungsoanthao",
                                                                    @style = "width: 100%; height: 600px; font-size: 14px; line-height: 18px; " +
                                                                            "border: 1px solid #dddddd; padding: 10px;"
                            })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Đăng Bài</button>
                </div>
            </div>
        </div>
    }
</div>
<script src="https://cdn.tiny.cloud/1/acxvg3eyoxct5i5jmbtgyce90eqcxap030cmyqqdd57mx03z/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: 'textarea#vungsoanthao',
        plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
        toolbar: 'a11ycheck addcomment showcomments casechange checklist code export formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
    });
</script>
