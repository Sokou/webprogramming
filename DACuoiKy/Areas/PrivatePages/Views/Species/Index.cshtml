@using DACuoiKy.Models;
@model DACuoiKy.Models.LoaiSP
@{
    ViewBag.Title = "Index";
    List<LoaiSP> list = ViewData["DsLoai"] as List<LoaiSP>;
}
<style>
    form {
        display: inline;
    }
</style>
<div class="card-header">
    <h3 class="card-title">chủng loại - Ngành hàng</h3>
</div>
<div class="row">
    <div class="col-md-6">
        <section class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách đơn hàng mới đặt</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã loại</th>
                                        <th>Tên loại hàng</th>
                                        <th>Số sản phẩm</th>
                                        <th>Nhóm lệnh</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (LoaiSP i in list)
                                    {
                                        <tr>
                                            <td>@i.maLoai</td>
                                            <td>@i.tenLoai</td>
                                            <td>@i.SanPhams.Where(x => x.maLoai == i.maLoai).Count() Sản phẩm</td>
                                            <td>
                                                @using (Html.BeginForm("Delete", "Species", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="ml" value="@i.maLoai" />
                                                    <button class="btn btn-danger">xóa</button>
                                                }
                                                @using (Html.BeginForm("Update", "Species", FormMethod.Post))
                                                {
                                                    <input type="hidden" name="mlcs" value="@i.maLoai" />
                                                    <button class="btn btn-info">Chỉnh sửa</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("index", "Species", FormMethod.Post))
        {
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Thông tin chính</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên nhóm sản phẩm</label>
                        @Html.TextBoxFor(m => m.tenLoai, new { @class = "form-control", @placeholder = " Tên Loại Hàng ..." })
                    </div>
                    <div class="form-group">
                        <label for="ndtt">Diển giải cho loại hàng</label>
                        @Html.TextAreaFor(m => m.ghiChu, new { @class = "form-control", @rows = "11", @placeholder = " Ghi chú liên quan đến loại hàng ..." })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">lưu thông tin</button>
                    </div>
                </div>
            </div>
            @Html.HiddenFor(x => x.maLoai)
        }

    </div>

</div>

